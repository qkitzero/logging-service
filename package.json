{
  "name": "logging-service",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint:ci": "eslint \"src/**/*.ts\"",
    "generate:openapi3": "swagger2openapi ./node_modules/@qkitzero/auth-service-openapi/gen/openapiv2/auth/v1/auth.swagger.json -o ./src/infrastructure/api/auth/openapi.json",
    "generate:schema": "openapi-typescript ./src/infrastructure/api/auth/openapi.json -o ./src/infrastructure/api/auth/schema.ts",
    "generate:all": "npm run generate:openapi3 && npm run generate:schema",
    "build": "rimraf dist && tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "express": "^5.1.0",
    "openapi-fetch": "^0.15.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@qkitzero/auth-service-openapi": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prisma": "^6.16.2",
    "rimraf": "^6.0.1",
    "swagger2openapi": "^7.0.8",
    "ts-jest": "^29.4.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0"
  }
}
